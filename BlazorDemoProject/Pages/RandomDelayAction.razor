<h3>RandomDelayAction</h3>

<MudButton id="startProcessing" Variant="Variant.Filled" Color="Color.Primary" OnClick="StartAction">
    @if (_processing)
    {
        <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
        <MudText Class="ms-2">Processing</MudText>
    }
    else
    {
        <MudText>Click me</MudText>
    }
</MudButton>

