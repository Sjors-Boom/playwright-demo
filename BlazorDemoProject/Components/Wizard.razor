<MudCard Outlined=true>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Default wizard</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <CascadingValue Value="this">
        <WizardStep>
            <span id="wizardStart">
                Begin wizard by pressing the button below
            </span>
        </WizardStep>
        @ChildContent
        <WizardStep>
            <span id="wizardEnd">
                Thanks for filling in the wizard!
            </span>
        </WizardStep>
    </CascadingValue>
    <MudCardActions>
        <MudButton id="previous" Variant="Variant.Filled" Disabled="stepIndex==0" OnClick="Previous">Previous</MudButton>
        <MudButton id="next" Variant="Variant.Filled" Disabled="stepIndex==Steps.Count-1" OnClick="Next">Next</MudButton>
    </MudCardActions>
</MudCard>

